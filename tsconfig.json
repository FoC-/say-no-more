{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/types",
    "declaration": true,
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "emitDeclarationOnly": true,

    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    "types": ["vite/client"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
